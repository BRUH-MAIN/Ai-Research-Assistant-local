# Backend Environment Variables Template
# Copy this to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_research_db

# Data Directory (where PDFs will be stored)
DATA_DIR=/home/bharath/Documents/DBMS/data

# Optional: Groq API (if using AI features)
GROQ_API_KEY=your_groq_api_key_here

# Optional: Redis (if using chat features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_SESSION_TTL_HOURS=24

# Redis Sync Configuration
# Set to false to disable Redis and use PostgreSQL directly
ENABLE_REDIS_SYNC=false
